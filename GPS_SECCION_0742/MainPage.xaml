<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GPS_SECCION_0742.MainPage"
             Title="Ubicación GPS">
    <StackLayout Padding="20" VerticalOptions="Center">
        <!-- Título -->
        <Label Text="Ubicación Actual"
               FontSize="Large"
               HorizontalOptions="Center" />

        <!-- Botón para obtener ubicación -->
        <Button Text="Obtener Ubicación"
                Clicked="ObtenerUbicacion_Clicked"
                HorizontalOptions="Center"
                Margin="0,20,0,0" />

        <!-- Muestra Latitud y Longitud -->
        <Label x:Name="lblUbicacion"
               Text="Latitud y Longitud aparecerán aquí"
               FontSize="Medium"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               Margin="0,20,0,0" />

        <!-- Botón para abrir en Google Maps -->
        <Button Text="Mostrar en Google Maps"
                Clicked="AbrirGoogleMaps_Clicked"
                HorizontalOptions="Center"
                IsVisible="False" 
                x:Name="btnGoogleMaps"
                Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>
